{
    "name": "webpackdemo",
    "version": "1.0.0",
    "description": "",
    "main": "electron.js",
    "homepage": "./",
    "scripts": {
        "postinstall": "./node_modules/.bin/electron-rebuild --parallel --force --types prod,dev,optional --module-dir .",
        "start": "webpack-dev-server",
        "build": "npm run clean && webpack -p",
        "clean": "rimraf ./build/*",
        "electron-pack": "build --win --x64",
        "preelectron-pack": "yarn build",
        "dev": "concurrently \"yarn start\" \"wait-on http://localhost:3000 && electron .\""
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "concurrently": "^3.5.0",
        "css-loader": "^0.28.5",
        "electron": "^1.7.11",
        "electron-builder": "^19.55.3",
        "electron-rebuild": "^1.7.3",
        "html-webpack-plugin": "^2.30.1",
        "rimraf": "^2.6.1",
        "style-loader": "^0.18.2",
        "wait-on": "^2.0.2",
        "webpack": "^3.5.4",
        "webpack-dev-server": "^2.7.1"
    },
    "dependencies": {
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "babel-polyfill": "^6.26.0",
        "electron-is-dev": "^0.3.0",
        "file-loader": "^1.1.9",
        "final-fs": "^1.6.1",
        "react": "^15.6.1",
        "react-dom": "^15.6.1",
        "react-router": "^4.2.0",
        "react-router-dom": "^4.2.2",
        "usb": "^1.3.1"
    },
    "build": {
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        },
        "files": [
            "electron.js",
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,            
            "deleteAppDataOnUninstall": false
        }
    }
}