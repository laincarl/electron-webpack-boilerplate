{
    "name": "electron-webpack-boilerplate",
    "version": "1.0.0",
    "description": "",
    "main": "main.js",
    "scripts": {
        "postinstall": "./node_modules/.bin/electron-rebuild --parallel --force --types prod,dev,optional --module-dir .",
        "start-server": "webpack-dev-server --hot --config ./webpack/webpack.config.js",
        "start": "concurrently \"electron .\"",
        "dev": "concurrently \"npm run start-server\" \"wait-on http://localhost:3000 && electron .\"",
        "clean": "rimraf ./build/*",
        "build": "npm run clean && webpack --config ./webpack/webpack.production.js",
        "prepackage": "npm run build",
        "package": "build --win --x64"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^7.1.2",
        "babel-plugin-transform-decorators-legacy": "^1.3.4",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-1": "^6.24.1",
        "concurrently": "^3.5.0",
        "css-loader": "^0.28.5",
        "electron": "^3.0.6",
        "electron-builder": "^19.55.3",
        "electron-rebuild": "^1.7.3",
        "eslint": "^5.8.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-loader": "^2.1.1",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jsx-a11y": "^6.1.2",
        "eslint-plugin-react": "^7.11.1",
        "file-loader": "^1.1.9",
        "html-webpack-plugin": "^3.2.0",
        "mini-css-extract-plugin": "^0.4.4",
        "rimraf": "^2.6.1",
        "style-loader": "^0.18.2",
        "wait-on": "^2.0.2",
        "webpack": "^4.23.1",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10",
        "webpack-merge": "^4.1.4"
    },
    "dependencies": {
        "babel-polyfill": "^6.26.0",
        "electron-is-dev": "^0.3.0",
        "react": "^16.6.0",
        "react-dom": "^16.6.0",
        "react-hot-loader": "^4.1.2",
        "react-router": "^4.2.0",
        "react-router-dom": "^4.2.2",
        "usb": "^1.3.1"
    },
    "build": {
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        },
        "files": [
            "main.js",
            "build/**/*",
            "node_modules/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "deleteAppDataOnUninstall": false
        }
    }
}
